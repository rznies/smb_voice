# =============================================
# Application Configuration
# =============================================

# Environment
NODE_ENV=development

# API Server
API_PORT=3001
API_HOST=0.0.0.0

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================
# Feature Flags
# =============================================

# Enable call recording
ENABLE_CALL_RECORDING=true

# Enable real-time transcription
ENABLE_LIVE_TRANSCRIPTION=true

# Enable sentiment analysis
ENABLE_SENTIMENT_ANALYSIS=true

# Enable analytics tracking
ENABLE_ANALYTICS=true

# =============================================
# Agent Configuration
# =============================================

# Maximum concurrent calls per agent
MAX_CONCURRENT_CALLS=10

# Call timeout (seconds)
CALL_TIMEOUT=300

# Default agent personality
DEFAULT_AGENT_PERSONALITY=professional

# System prompt template
SYSTEM_PROMPT=You are a professional, warm SMB receptionist. Book meetings via Google Calendar API, capture leads, escalate complex queries. Speak naturally under 20 seconds.

# =============================================
# Logging & Monitoring
# =============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry (Optional - for error tracking)
# https://sentry.io/
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxx.ingest.sentry.io/xxxxxxx

# =============================================
# Webhooks & Notifications
# =============================================

# Slack webhook (Optional - for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_TOKEN_HERE

# =============================================
# Rate Limiting
# =============================================

# Max requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Max requests per hour per user
RATE_LIMIT_PER_HOUR=1000

# =============================================
# Storage
# =============================================

# Use Supabase Storage for recordings
STORAGE_PROVIDER=supabase
SUPABASE_STORAGE_BUCKET=call-recordings

# Alternative: AWS S3
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=smb-voice-recordings

# =============================================
# Testing & Development
# =============================================

# Bypass authentication in development
DEV_BYPASS_AUTH=false

# Mock external API calls
MOCK_EXTERNAL_APIS=false

# Test phone number (for outbound testing)
TEST_PHONE_NUMBER=+15555555555
